<%= form_tag("/friendships/find", method: "get") do %>
    <%= label_tag(:user, "Search for:") %>
<%= text_field_tag(:user) %>
<%= submit_tag("Search") %>
<% end %>
<% if (@options != nil) then %>
    <% @options.each do |user| %>
        Name: <br />
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
        </tr>
  <%end %>
<% end %>
