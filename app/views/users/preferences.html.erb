<h1>Preferences</h1>
<%= render 'shared/error_messages' %>
<div>
	<%= form_for(@user) do |f|%>
		<%= f.label :picture, "ImageURL:" %>
		   <br>
		 <% if @user.picture != "user.png" %>
      		<%= f.text_field :picture,:value => @user.picture %>
      	<% else %>
      		<%= f.text_field :picture, :value => ""%>
      	<% end %>

		<br>
		    <%= f.label :interests, "Interests:" %>
		<br>
      		<%= f.text_area :interests, :value => @user.interests %>
		<br>
			<%= f.label :quotes, "Quotes:" %>
		<br>
      		<%= f.text_area :quotes, :value => @user.quotes%>
		<br>
		<%= f.submit "Update", :id => 'Update' %>
	<%end %>
</div>
<div>
	<h2>
        <%= "#{flash[:request]}" %>
    </h2>
    <% if @requests_list %>
    <div>
    	<%=for request in @requests_list do%>
    		<li><%="#{User.find_by_id(request.sender_id).first_name} wants to be your friend"%></li>
    		<%= button_to "accept", {:controller => "users", :action => "accept_request", :request_id => request.id} %>
    		<%= button_to "reject", {:controller => "users", :action => "reject_request", :request_id => request.id} %>
    	<%end%>
    </div>
    <%end%>
</div>
<div>


</div>