
<h1>
<%= "#{@user.first_name} #{@user.last_name}'s Profile"%>
</h1>
<table style="width: 700px; word-wrap:break-word; table-layout: fixed;" border="2">
<tr>
<td>
<%= image_tag("#{@user.picture}" , alt: "Profile Picture", width: "300", height: "200") %>
<%= render :partial =>'shared/friend_request', :locals => {:user=> @user, :profile =>true} %>
<br>
<% if @user.interests? %>
<%= "Interests: "%>
<br>
<%= "#{@user.interests}" %>
<br>
<%end%>

<% if @user.quotes? %>
<%= "Quotes:" %>
<br>
<%= "#{@user.quotes}" %>
<br>

<%end%>
<br>
</td>
<td>
<%= render 'shared/wall' %>
</td>
</tr>
</table>
